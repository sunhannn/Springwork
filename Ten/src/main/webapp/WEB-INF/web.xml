<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- web.xml 맨 위에 기술해주자 -->
	<!-- 디스패쳐서블릿 이외에도 스프링빈설정파일을 읽어와야하면 기술해주기 -->
	<!-- 비즈니스 레이어단의 스프링빈 설정파일의 위치를 알려준다 , 여러개도 기술가능함(그러나 설정파일은 비즈니스1개, 프레젠트1개로 
		최대 두개로만하자) -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<!-- 실질적으로 위의 설정파일을 구동하기 위해 필요한 listener 태그 => 객체생성을 여기서 합니다. -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener </listener-class>
	</listener>

	<!-- 필터객체 설정 -->
	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter </filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- front Controller = DispatcherServlet 가장 처음, 가장 끝에 실행된다 -->
	<!-- DispatcherServlet을 이용해서 서블릿 객체를 만들면서 init-param으로 스프링 컨테이너를 구동시키기 위한 
		연결방법 -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet </servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
